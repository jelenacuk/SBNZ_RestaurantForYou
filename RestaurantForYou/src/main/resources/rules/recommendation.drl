package rules;
import com.sbnz.RestaurantForYou.model.Restaurant;
import com.sbnz.RestaurantForYou.model.RestaurantRrequirements;

global RestaurantRrequirements requirements;


rule "price"
salience 80
when
	$requirements: RestaurantRrequirements();
	restaurant: Restaurant(price memberOf $requirements.getPrice, $score: score);
then
	restaurant.setScore($score +1);
end;

